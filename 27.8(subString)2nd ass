#include<stdio.h>
#include<string.h>
void subString(char str[],int n)
{
	int i,j,k,x;
	for(i=1;i<=n;i++)
	{
		for(j=0;j<n-i;j++)
		{   x=j+i;
			for(k=j;k<x;k++)
			
			printf("%3c",str[k]);
			printf("\n");
		}
	}
	}
	int main()
	{	
	
	char str[]="abcde";
	subString(str, strlen(str));
	return 0;
}
