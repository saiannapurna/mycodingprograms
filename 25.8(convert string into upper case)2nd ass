#include <stdio.h>
#include<string.h>
int main()
{
    char str[100];
    int i,length;
    scanf("%s",str);
    for(i=0;str[i]!='\0';i++)
    {
        length=i-1;
        if(length%2==0)
        {
            str[i]=str[i]-32;
        }
    }
        puts(str);
        return 0;
}





Input: Enter string: aditya
Output: aDiTyA
